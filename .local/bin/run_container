#!/bin/zsh

export HOSTNAME=$(hostname)
[[ $(hostname) = 'lxplus'* ]]       && IS_LXPLUS=1
[[ $(hostname) = 'naf'* ]]          && IS_NAF=1
[[ -n ${SINGULARITY_CONTAINER+x} ]] && IS_SINGULARITY=1

source ~/.env.zsh
source ~/.zsh/functions.zsh

if [[ -z ${1+x} ]]; then
  echo "At least one argument is required"
  exit 1
fi

$1
